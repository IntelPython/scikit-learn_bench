            },
            {
                "data": {
                    "source": "make_blobs",
                    "generation_kwargs": {
                        "n_samples": 20000,
                        "n_features": 2000,
                        "centers": 2
                    },
                    "split_kwargs": {
                        "train_size": 0.1,
                        "test_size": 0.9
                    }
                }
            },
            {
                "data": {
                    "dataset": "epsilon",
                    "split_kwargs": {
                        "train_size": 50000,
                        "test_size": null
                    }
                }
            },
            {
                "data": {
                    "dataset": "higgs",
                    "split_kwargs": {
                        "train_size": 1000000,
                        "test_size": null
                    }
                }
            }
        ]
    },
    "TEMPLATES": {
        "pca": {
            "INCLUDE": ["implementations", "pca parameters", "datasets"]
        }
    }
